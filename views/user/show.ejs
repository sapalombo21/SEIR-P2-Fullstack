<%- include('../partials/header') %> <% if (reviews.length) { %>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Game</th>
      <th scope="col">Review</th>
      <th scope="col">Rating</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% reviews.forEach(function(r) { %>
    <tr>
      <td><a href="/games/<%= r.game.gameId %>"><%= r.game.name %></a></td>
      <td><%= r.review %></td>
      <td><%= r.rating %></td>
      <td>
        <% if (user.equals(theUser)) { %>
        <form action="/review/<%= r._id %>/edit" method="GET">
          <button class="btn btn-light" type="submit">E</button>
        </form>
        <% } %>
      </td>
      <td>
        <% if (user.equals(theUser)) { %>
        <form action="/review/<%=r._id%>?_method=DELETE" method="POST">
          <button class="btn btn-light" type="submit">X</button>
        </form>
        <% } %>
      </td>
      <% }); %>
    </tr>
  </tbody>
</table>
<% } else { %>
<h5>No Reviews Yet</h5>
<% } %> <%- include('../partials/footer') %>
